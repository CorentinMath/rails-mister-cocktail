<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path(["bitter_cocktail.jpg","flame_cocktail.jpg","fruits_cocktail", "lemeon_cocktail.jpg","rhum_cocktail.jpg"].sample) %>)">

      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>


