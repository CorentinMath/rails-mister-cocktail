<div class="card-cocktail">
  <img src="https://img.taste.com.au/z6UaXdlj/w720-h480-cfill-q80/taste/2017/12/swp0080_recipe-integration-1980x1320px-b_v2-133202-1.jpg">
  <div class="card-cocktail-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
      <p>Ingredients</p>
      <% @cocktail.doses.each do |dose| %>
        <br>
        <p><%= dose.description %> of <%= dose.ingredient.name %></p>
        <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="far fa-trash-alt" style="color: rgb(0,0,0)"></i>
        <br>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost" %>
    <h2 class="card-cocktail-pricing" style="margin-right: 10px">Â£9</h2>
  </div>
</div>
<%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-ghost center" %>



